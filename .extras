function sort-bed(){
    LC_ALL=C sort -k1,1 -k2,2n --buffer-size 2300000 "$@"
}

sync_garmin(){
    newdir=converted_garmin_activities
    mkdir $newdir
    cd $newdir
    for activity in `find /Volumes/*/*/Activities/* -name *.fit`; do
        filename=`basename $activity`
        gpsbabel -i garmin_fit -f $activity -o gpx -F ${filename/.fit/.gpx}
    done
}

